{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "interface-name": false,
        "no-console": [
            true,
            "assert",
            "debug",
            "info",
            "warn"
        ],
        "max-line-length": [
            true,
            120
        ],
        "max-classes-per-file": false,
        "no-empty": false,
        "no-unused-expression": [
            true,
            "allow-fast-null-checks"
        ],
        "quotemark": [
            true,
            "single"
        ],
        "space-before-function-paren": [
            true,
            "anonymous"
        ],
        "trailing-comma": [
            true,
            {
                "esSpecCompliant": true
            }
        ]
    },
    "rulesDirectory": []
}